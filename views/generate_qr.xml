<odoo>
    <template id="report_invoice_document_inherit_verifactu_qr" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@id='total']" position="after">
            <t t-if="o.verifactu_qr">
                <img t-att-src="'data:image/png;base64,%s' % (o.verifactu_qr.decode('utf-8') if isinstance(o.verifactu_qr, bytes) else o.verifactu_qr)"
                     style="width:120px; height:120px;" alt="QR VeriFactu"/>
                <p style="font-size:10px; color:#888;">Visualizar factura</p>
                <p style="font-size:9px; color:#333;">
                    Huella SHA-256: 
                    <span style="color:#555;"><t t-esc="o.verifactu_hash"/></span>
                </p>
            </t>
        </xpath>
    </template>
</odoo>